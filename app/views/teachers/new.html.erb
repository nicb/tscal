<h1>Nuovo Insegnante</h1>

<% form_for(@teacher) do |f| %>
  <%= f.error_messages %>
<table>
<tr>
	<td><b>Username:</b></td>
	<td><%= f.text_field :login %></td>
</tr>
<tr>
	<td><b>Password:</b></td>
        <td><%= f.password_field :password %></td>
</tr>
<tr>
	<td><b>Conferma:</b></td>
        <td><%= f.password_field :password_confirmation %></td>
</tr>
<tr>
	<td><b>Nome:</b></td>
	<td><%= f.text_field :first_name %></td>
</tr>
<tr>
	<td><b>Cognome:</b></td>
	<td><%= f.text_field :last_name %></td>
</tr>
<tr>
	<td><b>Email:</b></td>
	<td><%= f.text_field :email %></td>
</tr>
<tr>
	<td><b>Website:</b></td>
	<td><%= f.text_field :url %></td>
</tr>
<tr>
	<td><b>Tipologia:</b></td>
	<td><%= f.text_field :teacher_typology %></td>
</tr>
</table>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>
<%= link_to 'Back', teachers_path %>
