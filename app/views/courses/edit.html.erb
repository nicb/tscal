<h1>Modifica il Corso - <i><%= @course.name %></i></h1>

<% form_for(@course) do |f| %>
  <%= f.error_messages %>
<p>Nome del corso: <%= f.text_field :name, :value => @course.name %></p>
<p>Durata del corso: <%= f.text_field :duration, :value => @course.duration %></p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @course %> |
<%= link_to 'Back', courses_path %>
